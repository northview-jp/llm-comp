{
  "name": "llm-comp",
  "version": "0.1.0",
  "description": "Compare LLM responses (OpenAI / Claude / Gemini) in a tabbed terminal UI",
  "license": "MIT",
  "type": "module",
  "bin": {
    "llm-comp": "bin/llm-comp.js"
  },
  "files": [
    "bin/",
    "dist/",
    "LICENSE",
    "MODEL_CATALOG.md",
    "README.md",
    "llm-comp.example.yaml"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/cli.js",
    "lint": "tsc -p tsconfig.json --noEmit",
    "prepare": "npm run build",
    "test": "npm run build && node --test test/*.test.js test/**/*.test.js"
  },
  "dependencies": {
    "ink": "^5.0.1",
    "react": "^18.3.1",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20"
  }
}
